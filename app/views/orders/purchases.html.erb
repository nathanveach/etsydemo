<div class="text-center">
  <h2>Your Purchase History</h2>
</div>

<table class="table table-striped table-bordered">
  <tr class="text-center">
    <th>Image</th>
    <th>Item</th>
    <th>Price</th>
    <th>Seller</th>
    <th>Date Purchased</th>
  </tr>


  <% @orders.each do |o| %>
  <tr class="text-center">
    <td><%= image_tag o.listing.image.variant(resize: '75x') %></td>
    <td><%= o.listing.name %></td>
    <td><%= number_to_currency o.listing.price %></td>
    <td><%= o.seller.name %></td>
    <td><%= o.created_at.strftime("%B %-d, %Y") %></td>
  </tr>
  <% end %>
</table>

<br/>

<% if user_signed_in? %>
  <%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>
<% end %>
